    </FrameLayout>
    <RelativeLayout android:layout_gravity="bottom|center" android:id="@id/epg_layout" android:background="@drawable/epg" android:focusable="false" android:layout_width="fill_parent" android:layout_height="@dimen/sm_126" android:layout_marginBottom="@dimen/sm_20">
        <LinearLayout android:gravity="center_horizontal" android:id="@id/top" android:layout_width="fill_parent" android:layout_height="@dimen/sm_40">
            <TextView android:textSize="@dimen/sm_24" android:typeface="serif" android:textColor="@color/white" android:layout_gravity="center|left" android:id="@id/curren_tv_title" android:layout_width="@dimen/sm_250" android:layout_height="@dimen/sm_30" />
            <TextView android:textSize="@dimen/sm_24" android:typeface="serif" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@id/tv_name" android:layout_width="@dimen/sm_200" android:layout_height="@dimen/sm_30" android:layout_marginLeft="@dimen/sm_20" />
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:id="@id/middle" android:layout_width="fill_parent" android:layout_height="@dimen/sm_40" android:layout_marginTop="@dimen/sm_3" android:layout_below="@id/top">
            <TextView android:textSize="@dimen/sm_24" android:typeface="serif" android:textColor="@color/white" android:layout_gravity="center|left" android:id="@id/epg1" android:layout_width="@dimen/sm_250" android:layout_height="@dimen/sm_30" />
            <TextView android:textSize="@dimen/sm_24" android:typeface="serif" android:textColor="@color/white" android:layout_gravity="center_vertical" android:layout_width="@dimen/sm_200" android:layout_height="@dimen/sm_30" android:layout_marginLeft="@dimen/sm_20" />
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:id="@id/bottom" android:layout_width="fill_parent" android:layout_height="@dimen/sm_40" android:layout_marginTop="@dimen/sm_3" android:layout_below="@id/middle">
            <TextView android:textSize="@dimen/sm_24" android:typeface="serif" android:textColor="@color/white" android:layout_gravity="center|left" android:id="@id/epg2" android:layout_width="@dimen/sm_250" android:layout_height="@dimen/sm_30" />
            <TextView android:textSize="@dimen/sm_24" android:typeface="serif" android:textColor="@color/white" android:layout_gravity="center_vertical" android:layout_width="@dimen/sm_200" android:layout_height="@dimen/sm_30" android:layout_marginLeft="@dimen/sm_20" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/left_layout" android:background="@drawable/live_channel_list_bg" android:paddingTop="@dimen/sm_20" android:paddingBottom="@dimen/sm_20" android:layout_width="@dimen/sm_360" android:layout_height="fill_parent">
        <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/sm_20" android:paddingRight="@dimen/sm_20" android:layout_width="fill_parent" android:layout_height="@dimen/sm_80" android:layout_marginBottom="@dimen/sm_5">
            <ImageView android:id="@id/leftview" android:layout_width="@dimen/sm_45" android:layout_height="@dimen/sm_45" android:src="@drawable/changetype_left" android:scaleType="fitXY" />
            <TextView android:textSize="@dimen/sm_28" android:textColor="@color/white" android:gravity="center" android:id="@id/programtitle" android:background="@drawable/channeltype_bg" android:layout_width="0.0px" android:layout_height="@dimen/sm_45" android:layout_weight="1.0" />
            <ImageView android:id="@id/rightview" android:layout_width="@dimen/sm_45" android:layout_height="@dimen/sm_45" android:src="@drawable/changetype_right" android:scaleType="fitXY" />
        </LinearLayout>
        <ListView android:id="@id/programlist" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="0.0px" android:divider="@drawable/diver" android:layout_weight="1.0" />
        <ImageView android:layout_gravity="center_horizontal" android:id="@id/downview" android:focusable="false" android:layout_width="@dimen/sm_50" android:layout_height="@dimen/sm_40" android:layout_marginTop="@dimen/sm_15" android:src="@drawable/live_channel_list_arrow_down" />
    </LinearLayout>
    <LinearLayout android:layout_gravity="center|right|top" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/sm_38" android:id="@id/program_news" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sm_20" android:layout_marginTop="@dimen/sm_5" android:layout_marginRight="@dimen/sm_20" />
    </LinearLayout>
    <TextView android:textSize="@dimen/sm_48" android:layout_gravity="center|right|top" android:id="@id/program_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sm_50" android:layout_marginRight="@dimen/sm_30" />
    <LinearLayout android:layout_gravity="center|top" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sm_220">
        <TextView android:textSize="@dimen/sm_48" android:textColor="@color/white" android:id="@id/tv_line" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:textSize="@dimen/sm_38" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@id/tv_speed" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>